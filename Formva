<!DOCTYPE html>
<html>
<head>
    <title>Product Form Validation</title>
    <style>
        body {
            font-family: Arial;
            padding: 20px;
        }
        form {
            width: 350px;
        }
        input, select {
            width: 100%;
            padding: 8px;
            margin-bottom: 12px;
        }
        .error {
            color: red;
            font-size: 14px;
        }
    </style>
</head>

<body>
    <h2>Product Entry Form</h2>

    <form id="productForm" onsubmit="return validateForm()">
        
        <label>Product Name:</label>
        <input type="text" id="pname">
        <div class="error" id="pnameError"></div>

        <label>Product ID:</label>
        <input type="text" id="pid">
        <div class="error" id="pidError"></div>

        <label>Price:</label>
        <input type="number" id="price">
        <div class="error" id="priceError"></div>

        <label>Quantity:</label>
        <input type="number" id="qty">
        <div class="error" id="qtyError"></div>

        <label>Category:</label>
        <select id="category">
            <option value="">-- Select Category --</option>
            <option value="Electronics">Electronics</option>
            <option value="Grocery">Grocery</option>
            <option value="Clothing">Clothing</option>
        </select>
        <div class="error" id="catError"></div>

        <button type="submit">Submit</button>
    </form>


    <script>
        function validateForm() {

            let valid = true;

            // Clear previous errors
            document.querySelectorAll(".error").forEach(e => e.innerHTML = "");

            // Get values
            let pname = document.getElementById("pname").value.trim();
            let pid = document.getElementById("pid").value.trim();
            let price = document.getElementById("price").value.trim();
            let qty = document.getElementById("qty").value.trim();
            let category = document.getElementById("category").value.trim();

            // Validation
            if (pname === "") {
                document.getElementById("pnameError").innerHTML = "Product name is required";
                valid = false;
            }

            if (pid === "") {
                document.getElementById("pidError").innerHTML = "Product ID is required";
                valid = false;
            }

            if (price === "" || price <= 0) {
                document.getElementById("priceError").innerHTML = "Price must be a positive number";
                valid = false;
            }

            if (qty === "" || qty <= 0) {
                document.getElementById("qtyError").innerHTML = "Quantity must be a positive number";
                valid = false;
            }

            if (category === "") {
                document.getElementById("catError").innerHTML = "Please select a category";
                valid = false;
            }

            return valid; 
        }
    </script>

</body>
</html>
